---
import { Github, Linkedin } from "@lucide/astro";
import JSIcon from "../icons/JSIcon.astro";
import TSIcon from "../icons/TSIcon.astro";
---

<footer class="footer">
	<div class="footer-left">
		<div class="footer-logos">
			<span class="logo rotated-left">
				<JSIcon />
			</span>
			<span class="logo rotated-right">
				<TSIcon />
			</span>
		</div>
		<p class="footer-brand">Vanilla Collection</p>
	</div>

	<div class="footer-center">
		<p class="footer-made">
			© {new Date().getFullYear()} — Hecho por
			<a href="https://github.com/AletzMan" target="_blank" rel="noopener noreferrer"
				>Alejandro García</a
			>
		</p>
	</div>

	<div class="footer-right">
		<a
			href="https://github.com/AletzMan"
			target="_blank"
			rel="noopener noreferrer"
			aria-label="GitHub"
		>
			<Github />
		</a>
		<a
			href="https://www.linkedin.com/in/alejandro-garcia-dev/"
			target="_blank"
			rel="noopener noreferrer"
			aria-label="LinkedIn"
		>
			<Linkedin />
		</a>
	</div>
</footer>

<style>
	.footer {
		position: sticky;
		top: 100%;
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		padding: var(--size-md);
		gap: 1rem;
		width: 100%;
		max-width: var(--max-width);
		margin: 1em auto 0 auto;
		border-top: 1px solid var(--color-border);
		background-color: var(--color-surface);
		color: var(--color-text);
		font-size: 0.9rem;
	}

	.footer-left {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}

	.footer-logos {
		display: flex;
		align-items: center;
		gap: 0.25rem;
	}

	.logo svg {
		width: 1.5rem;
		height: 1.5rem;
		transition: transform 0.3s ease;
	}

	.rotated-left svg {
		transform: rotate(10deg) translateX(2px);
	}

	.rotated-right svg {
		transform: rotate(-10deg) translateX(-2px);
	}

	.footer-brand {
		font-weight: 600;
	}

	.footer-center {
		text-align: center;
		flex: 1;
	}

	.footer-center a {
		color: var(--color-accent);
		text-decoration: none;
		font-weight: 500;
		transition: color 0.3s ease;
	}

	.footer-center a:hover {
		color: var(--color-accent-hover, var(--color-accent));
	}

	.footer-right {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}

	.footer-right a {
		color: var(--color-text);
		display: flex;
		align-items: center;
		justify-content: center;
		transition: transform 0.2s ease;
	}

	.footer-right a:hover {
		transform: scale(1.1);
	}
</style>
