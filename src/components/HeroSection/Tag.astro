---
interface Props {
	title: string;
	icon?: boolean;
	color?: string;
}
const { title, icon, color } = Astro.props;
---

<div class="tag">
	{icon && <span class="tag-icon" style={{ backgroundColor: color || "var(--color-accent)" }} />}
	<span class="tag-title">{title}</span>
</div>

<style>
	.tag {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.25rem 1rem;
		border-radius: 30px;
		background: var(--color-surface-secondary);
		border: 1px solid var(--color-border);
		box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
	}
	.tag-icon {
		width: 8px;
		height: 8px;
		border-radius: 50%;
	}
	.tag-title {
		font-size: 1rem;
		font-weight: 500;
		color: var(--color-text);
		width: max-content;
	}
</style>
